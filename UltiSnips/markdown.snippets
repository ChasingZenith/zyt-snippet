def vim_left_p1_before_p2(p1, p2):
	currentlinenumber = int(vim.eval("line('.')"))
	currentline = vim.eval("getline('.')")
	currentcol = int(vim.eval("col('.')"))
	left = currentline[:currentcol-1]
	p1s = re.search(p1, left)
	p2s = re.search(p2, left)
	if p1s and not p2s:
		return True
	if p2s and not p1s:
		return False
	if p1s and p2s:
		if [x for x in re.finditer(p1, left)][0].span()[0] < [x for x in re.finditer(p2, left)][0].span()[0]:
			return True
		else:
			return False
	else:
		for index in range(int(vim.eval("line('$')")) - 1, 0, -1):
			tline = vim.eval("getline(%d)" % index)
			if not tline.strip():
				return False
			p1s = re.search(p1, tline)
			p2s = re.search(p2, tline)
			if p1s and not p2s:
				return True
			if p2s and not p1s:
				return False
			if p1s and p2s:
				if [x for x in re.finditer(p1, tline)][0].span()[0] < [x for x in re.finditer(p2, tline)][0].span()[0]:
					return True
				else:
					return False

